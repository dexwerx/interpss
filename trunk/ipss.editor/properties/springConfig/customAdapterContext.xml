<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	     xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<!--
		Custom File Adapter object list
		===============================
		
		defining a custom adapter includes the following two steps:
		
		1) define the adapter 
			id: a unique custom adapter Spring Object id
			class: the full class name of the adapter implementation
			extension: custom file extension, it has to be unique. 
			description: description for the custom file
		2) add the adapter to the customAdapterList
		
			<list>
				...
				<ref bean="myCustomAdapterId"/>
			</list>
	-->

	<bean id="fileAdapterIpssInternalFormat" 
	      class="org.interpss.custom.exchange.FileAdapter_IpssInternalFormat"
	      scope="singleton">	
	    <property name="name">
	    	<value>InterPSS Internal Format</value></property>
	    <property name="fileFilterString">
	    	<value>ipssdata|dat</value></property>
	    <property name="extension">
	    	<value>ipssdat</value></property>
	    <property name="description">
	    	<value>InterPSS Text File Format</value></property>
	</bean>

	<bean id="fileAdapterIeeeCommonFormat" 
	      class="org.interpss.custom.exchange.FileAdapter_IeeeCommonFormat"
	      scope="singleton">	
	    <property name="name">
	    	<value>IEEE Common Format</value></property>
	    <property name="fileFilterString">
	    	<value>dat</value></property>
	    <property name="extension">
	    	<value>ieee</value></property>
	    <property name="description">
	    	<value>IEEE Common Format</value></property>
	</bean>

	<bean id="fileAdapterPSTMatlabFormat" 
	      class="cn.edu.tsinghua.dps.adapter.aclf.FileAdpater_PSTMatlabFormat"
	      scope="singleton">	
	    <property name="name">
	    	<value>MatLat Data Format</value></property>
	    <property name="fileFilterString">
	    	<value>m</value></property>
	    <property name="extension">
	    	<value>m</value></property>
	    <property name="description">
	    	<value>MatLab Power Flow Data Formatt</value></property>
	</bean>

	<bean id="fileAdapterPSATFormat" 
	      class="org.interpss.custom.exchange.FileAdpater_PSATFormat"
	      scope="singleton">	
	    <property name="name">
	    	<value>PSAT Format</value></property>
	    <property name="fileFilterString">
	    	<value>m</value></property>
	    <property name="extension">
	    	<value>psat</value></property>
	    <property name="description">
	    	<value>PSAT Data Format</value></property>
	</bean>
	
	<bean id="fileAdapterPSSEFormat" 
	      class="org.interpss.custom.exchange.FileAdapter_PTIFormat"
	      scope="singleton">	
	    <property name="name">
	    	<value>PSS/E Format</value></property>
	    <property name="fileFilterString">
	    	<value>raw</value></property>
	    <property name="extension">
	    	<value>psse</value></property>
	    <property name="versionList">
	    	<list>
	    		<value>PSS/E-30</value>
	    	</list></property>
	    <property name="description">
	    	<value>PSSE Data Format</value></property>
	</bean>
	
	<bean id="fileAdapterJavaScripts" 
	      class="org.interpss.custom.script.FileAdapter_JavaScripts"
	      scope="singleton">	
	    <property name="name">
	    	<value>InterPSS JavaScripts</value></property>
	    <property name="fileFilterString">
	    	<value>js</value></property>
	    <property name="extension">
	    	<value>js</value></property>
	    <property name="versionList">
	    	<list>
	    		<value>Verion 1.0</value>
	    	</list></property>
	    <property name="description">
	    	<value>InterPSS JavaScripts Scripting File</value></property>
	</bean>
	
	<bean id="customFileAdapterList" 
	      class="java.util.ArrayList"
	      scope="singleton">	
		<constructor-arg>
			<list>
				<ref bean="fileAdapterPSSEFormat"/>
				<ref bean="fileAdapterIeeeCommonFormat"/>
				<ref bean="fileAdapterPSTMatlabFormat"/>
				<ref bean="fileAdapterPSATFormat"/>
				<ref bean="fileAdapterIpssInternalFormat"/>
				<ref bean="fileAdapterJavaScripts"/>
			</list>
		</constructor-arg>
	</bean>
</beans>
