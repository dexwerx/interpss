<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<!--
		Excitor model object list
		=========================

		defining an excitor model includes the following two steps:
		
		1) define the exciter model 
			id: a unique Object id
			class: the full class name of the implementation
			name: exciter name, it has to be unique. Also, the name should not be changed
			      since ipss data file is linked to this name.
			description: description for the custom file
		2) add the adapter to the customAdapterList
		
			<list>
				...
				<ref bean="myExciterId"/>
			</list>
	-->
	
	<bean id="customExciter" 
	  	class="ipss.custom.dstab.exc.CustomExciter"
	    singleton="false">	
	    <property name="name">
	    	<value>Custom Exciter</value></property>
	    <property name="category">
	    	<value>InterPSS</value></property>
	    <property name="desc">
	    	<value>A sample custom exciter implmementation</value></property>
	</bean>

	<bean id="simpleExciter" 
	      class="com.interpss.dstab.control.exc.simple.SimpleExciter"
	      singleton="false">	
	    <property name="name">
	    	<value>Simple Exciter</value></property>
	    <property name="category">
	    	<value>InterPSS</value></property>
	    <property name="desc">
	    	<value>An InterPSS simple exciter implmementation</value></property>
	</bean>

	<bean id="ieeeDC_1AExciter" 
	      class="com.interpss.dstab.control.exc.ieee.ieeeDC1A.IEEE_DC1AExciter"
	      singleton="false">	
	    <property name="name">
	    	<value>IEEE DC-1A</value></property>
	    <property name="category">
	    	<value>IEEE-Exciter</value></property>
	    <property name="desc">
	    	<value>The IEEE DC-1A Type exiter implementation</value></property>
	</bean>
	
	<bean id="ieeeAC_4AExciter" 
	      class="com.interpss.dstab.control.exc.ieee.ieeeAC4A.IEEE_AC4AExciter"
	      singleton="false">	
	    <property name="name">
	    	<value>IEEE AC-4A</value></property>
	    <property name="category">
	    	<value>IEEE-Exciter</value></property>
	    <property name="desc">
	    	<value>The IEEE AC-4A Type exiter implementation</value></property>
	</bean>
<!--	
	<bean id="psatAvrType1" 
	      class="com.interpss.dstab.control.exc.psat.psatType1.Type1_psatAvr"
	      singleton="false">	
	    <property name="name">
	    	<value>PSAT AVR Type-1</value></property>
	    <property name="desc">
	    	<value>PSAT AVR Type-1 implementation</value></property>
	</bean>

	<bean id="psatAvrType2" 
	      class="com.interpss.dstab.control.exc.psat.psatType2.Type2_psatAvr"
	      singleton="false">	
	    <property name="name">
	    	<value>PSAT AVR Type-2</value></property>
	    <property name="desc">
	    	<value>PSAT AVR Type-2 implementation</value></property>
	</bean>

	<bean id="psatAvrType3" 
	      class="com.interpss.dstab.control.exc.psat.psatType3.Type3_psatAvr"
	      singleton="false">	
	    <property name="name">
	    	<value>PSAT AVR Type-3</value></property>
	    <property name="desc">
	    	<value>PSAT AVR Type-3 implementation</value></property>
	</bean>
-->
	<bean id="exciterList" 
	      class="java.util.ArrayList"
	      singleton="true">	
		<constructor-arg>
			<list>
				<ref bean="simpleExciter"/>
				<ref bean="ieeeDC_1AExciter"/>
				<ref bean="ieeeAC_4AExciter"/>
				<ref bean="customExciter"/>
			</list>
		</constructor-arg>
	</bean>
	
	<!--
