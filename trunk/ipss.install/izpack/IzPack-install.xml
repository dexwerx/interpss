<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<!-- 
	A sample installation file.
	Use it as a base for your own installers :-)
	
	To compile it :
	   - go in the bin directory where you installed IzPack
	  - call "compile ../sample/install.xml -b ../sample"
-->

<installation version="1.0">
	<!-- 
		The info section.
		The meaning of the tags should be natural ...
	-->
	<info>
		<appname>InterPSS_OpenCIM_Viewer</appname>
		<appversion>1.0.0BETA</appversion>
		<authors>
			<author name="The Interpss Team" email="info@interpss.org" />
		</authors>
		<url>http://www.interpss.com/</url>
	</info>

	<!-- 
		The gui preferences indication.
		Sets the installer window to 640x480. It will not be able to change the size.
	-->

	<guiprefs height="480" resizable="no" width="640">
		<laf name="looks">
			<os family="windows" />
			<param name="variant" value="extwin" />
		</laf>
	</guiprefs>

	<variables>
		<variable name="DesktopShortcutCheckboxEnabled" value="true" />
	</variables>

	<!-- 
		The locale section.
		Asks here to include the English and French langpacks.
	-->

	<locale>
		<langpack iso3="eng" />
		<langpack iso3="chn" />
		<langpack iso3="spa" />
	</locale>

	<!-- 
		The resources section.
		The ids must be these ones if you want to use the LicencePanel and/or the InfoPanel.
	-->

	<resources>
		<res id="LicencePanel.licence" src="Licence.txt" />
		<res src="install-readme.html" id="HTMLInfoPanel.info" />
		<res id="shortcutSpec.xml" src="shortcutSpec.xml" />
		<res src="border1.png" id="Installer.image.0" />
		<res src="border2.png" id="Installer.image.1" />
		<res src="border3.png" id="Installer.image.2" />
		<res src="border4.png" id="Installer.image.3" />
		<res src="border5.png" id="Installer.image.4" />
		<res src="border5.png" id="Installer.image.5" />
		<res src="border6.png" id="Installer.image.6" />
		<res src="border7.png" id="Installer.image.7" />
		<res src="border8.png" id="Installer.image.8" />
	</resources>

	<!-- 
		The panels section.
		We indicate here which panels we want to use. The order will be respected.
	-->

	<panels>
		<panel classname="HelloPanel" />
		<panel classname="HTMLInfoPanel" />
		<panel classname="LicencePanel" />
		<panel classname="TargetPanel" />
		<panel classname="PacksPanel" />
		<panel classname="SummaryPanel" />
		<panel classname="InstallPanel" />
		<panel classname="ShortcutPanel" />
		<panel classname="SimpleFinishPanel" />
	</panels>

	<!-- 
		The packs section.
		We specify here our packs.
	-->

	<packs>
		<pack name="Runtime" required="yes">
			<description>
				Interpss runtime jar and configuration files.
			</description>

			<file src="configuration" targetdir="$INSTALL_PATH" />
			<file src="dict" targetdir="$INSTALL_PATH" />
			<file src="icons" targetdir="$INSTALL_PATH" />
			<file src="license" targetdir="$INSTALL_PATH" />
			<file src="log" targetdir="$INSTALL_PATH" />
			<file src="plugins" targetdir="$INSTALL_PATH" />
			<file src="properties" targetdir="$INSTALL_PATH" />
			<file src="opencim.exe" targetdir="$INSTALL_PATH" />
			<file src="opencim.ini" targetdir="$INSTALL_PATH" />
			<file src="plugin_customization.ini" targetdir="$INSTALL_PATH" />
		</pack>

		<pack name="Sample" required="no">
			<description>
				Samples
			</description>
			<file src="samples" targetdir="$INSTALL_PATH" />
		</pack>

	</packs>

	<!-- The native libraries to add -->
	<native type="izpack" name="ShellLink.dll" />
</installation>

