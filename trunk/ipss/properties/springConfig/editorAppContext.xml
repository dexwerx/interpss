<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
         xmlns:p="http://www.springframework.org/schema/p"
	     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	     xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

<!--  
	This config file defines object config for the 
	ipss.common and ipss.editor packages
	It also includes all other configuration files
-->

	<!-- 
	    Define the UI Status object
	    ===========================	
	-->
	<bean id="ipssStatusPanel" 
	      class="org.interpss.editor.ui.NBStatusPanel"
	      scope="singleton">	
	</bean>	


	<!--  Define the IPSSMsgHub object
	      ============================
             TYPE_MSG    = 1,
             TYPE_DEBUG  = 2,
             TYPE_INFO   = 3,
             TYPE_STATUS = 4,
             TYPE_WARN   = 5,
             TYPE_ERROR  = 6;
	-->
	<bean id="stdoutMsgListener" 
	      class="com.interpss.common.msg.StdoutMsgListener">	
	  	<constructor-arg>
	  		<value>4</value></constructor-arg>
	</bean>

	<bean id="editorDialogUtil" 
	      class="com.interpss.common.ui.DialogUtilImpl"
	      scope="singleton">	
	</bean>

	<bean id="ipssMsgHub" 
	      class="com.interpss.common.msg.IPSSMsgHubImpl"
	      scope="singleton">	
		<property name="msgListeners">
			<list>
				<ref bean="ipssStatusPanel"/>
				<ref bean="stdoutMsgListener"/>
				<ref bean="editorDialogUtil"/>
			</list>
		</property>
	</bean>
	

	<!-- 
	    Define DB Manager objects
	    =========================	
	-->
	<bean id="refDataManager" 
	      class="org.interpss.editor.refData.RefDataManager"
	      scope="singleton">	
	</bean>

	<bean id="simuRecManager" 
	      class="org.interpss.editor.io.SimuRecDBManager"
	      scope="singleton">	
	</bean>
			
	<bean id="projectDataManager" 
	      class="org.interpss.editor.io.ProjectDataDBManager"
	      scope="singleton">	
	</bean>


	<!-- 
		include other object config. These configurations
		may be changed to plug-in users implementation
	-->

	<import resource="coreLibContext.xml"/>
	<import resource="pluginContext.xml"/>
	<import resource="customAdapterContext.xml"/>

	<import resource="dstabControllerExciterContext.xml"/>
	<import resource="dstabControllerGovernorContext.xml"/>
	<import resource="dstabControllerStabilizerContext.xml"/>

	<import resource="jgraphContext.xml"/>

	<import resource="reportContext.xml"/>

	<!-- 
	    Define the AppContext object
	    ============================	
	-->
	<bean id="ipssAppContext" 
	      class="org.interpss.editor.app.AppContext"
	      scope="singleton">	
	</bean>	

	<!-- 
	    Define the main GraphEditor object
	    ==================================	
	-->
	<bean id="ipssGraphicEditor" 
	      class="org.interpss.editor.coreframework.GPGraphpad"
	      >	
	      <constructor-arg>
	  	  	<ref bean="ipssStatusPanel"/>
	  	  </constructor-arg>
	</bean>	


	<!-- 
		include other object config. These configurations
		may be changed to plug-in users implementation.
		The following UI objects are depending on the ipssGraphicEditor objcect
	-->
	
	<import resource="editorUIContext.xml"/>

	<import resource="editorSimuContext.xml"/>

</beans>
