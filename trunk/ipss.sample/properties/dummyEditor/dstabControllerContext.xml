<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<!--
		Excitor model object list
		=========================

		defining an excitor model includes the following two steps:
		
		1) define the excitor model 
			id: a unique Object id
			class: the full class name of the implementation
			name: excitor name, it has to be unique. Also, the name should not be changed
			      since ipss data file is linked to this name.
			description: description for the custom file
		2) add the adapter to the customAdapterList
		
			<list>
				...
				<ref bean="myExcitorId"/>
			</list>
	-->
	
	<bean id="customExcitor" 
	  	class="custom.dstab.exc.CustomExcitor"
	    singleton="false">	
	    <property name="name">
	    	<value>Custom Excitor</value></property>
	    <property name="desc">
	    	<value>A sample custom excitor implmementation</value></property>
	</bean>

	<bean id="simpleExcitor" 
	      class="com.interpss.dstab.control.exc.simple.SimpleExcitor"
	      singleton="false">	
	    <property name="name">
	    	<value>Simple Excitor</value></property>
	    <property name="desc">
	    	<value>An InterPSS simple excitor implmementation</value></property>
	</bean>

	<bean id="ieeeDC_1AExcitor" 
	      class="com.interpss.dstab.control.exc.dc1a.IEEE_DC1AExcitor"
	      singleton="false">	
	    <property name="name">
	    	<value>IEEE DC-1A</value></property>
	    <property name="desc">
	    	<value>The IEEE DC-1A Type exitor implementation</value></property>
	</bean>
	
	<bean id="ieeeAC_4AExcitor" 
	      class="com.interpss.dstab.control.exc.ac4a.IEEE_AC4AExcitor"
	      singleton="false">	
	    <property name="name">
	    	<value>IEEE AC-4A</value></property>
	    <property name="desc">
	    	<value>The IEEE AC-4A Type exitor implementation</value></property>
	</bean>
	
	<bean id="excitorList" 
	      class="java.util.ArrayList"
	      singleton="true">	
		<constructor-arg>
			<list>
				<ref bean="simpleExcitor"/>
				<ref bean="ieeeDC_1AExcitor"/>
				<ref bean="ieeeAC_4AExcitor"/>
				<ref bean="customExcitor"/>
			</list>
		</constructor-arg>
	</bean>
	
	<!--
		Governor model object list
		==========================
	-->
	<bean id="customGovernor" 
	      class="custom.dstab.gov.CustomGovernor"
	      singleton="false">	
	    <property name="name">
	    	<value>Custom Governor</value></property>
	    <property name="desc">
	    	<value>A sample custom governor implmementation</value></property>
	</bean>

	<bean id="simpleGovernor" 
	      class="com.interpss.dstab.control.gov.simple.SimpleGovernor"
	      singleton="false">	
	    <property name="name">
	    	<value>Simple Governor</value></property>
	    <property name="desc">
	    	<value>An InterPSS simple governor implmementation</value></property>
	</bean>

	<bean id="governorList" 
	      class="java.util.ArrayList"
	      singleton="true">	
		<constructor-arg>
			<list>
				<ref bean="simpleGovernor"/>
				<ref bean="customGovernor"/>
			</list>
		</constructor-arg>
	</bean>
	
	<!--
		Stabilizer model object list
		============================
	-->
	<bean id="customStabilizer" 
	      class="custom.dstab.pss.CustomStabilizer"
	      singleton="false">	
	    <property name="name">
	    	<value>Custom Stabilizer</value></property>
	    <property name="desc">
	    	<value>A sample custom stabilizer implmementation</value></property>
	</bean>

	<bean id="simpleStabilizer" 
	      class="com.interpss.dstab.control.pss.simple.SimpleStabilizer"
	      singleton="false">	
	    <property name="name">
	    	<value>Simple Stabilizer</value></property>
	    <property name="desc">
	    	<value>An InterPSS simple stabilizer implmementation</value></property>
	</bean>
	
	<bean id="stabilizerList" 
	      class="java.util.ArrayList"
	      singleton="true">	
		<constructor-arg>
			<list>
				<ref bean="simpleStabilizer"/>
				<ref bean="customStabilizer"/>
			</list>
		</constructor-arg>
	</bean>	
</beans>
