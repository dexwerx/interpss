<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="topToolbarManager" 
	      class="com.interpss.editor.ui.TopToolbarManager"
	      singleton="true">	
	      <constructor-arg>
	  			<ref bean="ipssGraph"/></constructor-arg>
      	  <!-- also depends on GEditor, needs to be set -->
      	  <!-- also depends on ActionAdapter, needs to be set -->
	</bean>

	<bean id="leftToolbarManager" 
	      class="com.interpss.editor.ui.LeftToolbarManager"
	      singleton="true">	
	</bean>

	<bean id="editorStatusPanel" 
	       class="com.interpss.editor.ui.impl.NBStatusPanel"
		   singleton="true"	>
	</bean>

	<bean id="editorActionAdapter" 
	      class="com.interpss.editor.ui.ActionAdapter"
	      singleton="true">	
	      <constructor-arg>
	  			<ref bean="topToolbarManager"/></constructor-arg>
      	  <!-- also depends on IMenubar, needs to be set -->
      	  <!-- also depends on IpssMainFrame, needs to be set -->
      	  <!-- also depends on GEditor, needs to be set -->
	</bean>

	<bean id="ipssMainFrame" 
	      class="com.interpss.editor.IpssMainFrame"
	      singleton="true">
	      <constructor-arg>
	  			<ref bean="editorActionAdapter"/></constructor-arg>
      	  <!-- also depends on GEditor, needs to be set -->
	</bean>

	<bean id="editorMenubar" 
	      class="com.interpss.editor.ui.NBMenuDialog"
	      singleton="true">	
	      <constructor-arg>
	  			<ref bean="editorActionAdapter"/></constructor-arg>
	      <constructor-arg>
	  			<ref bean="ipssMainFrame"/></constructor-arg>
      	  <!-- also depends on GEditor, needs to be set -->
	</bean>
</beans>
